PORT=3000
NODE_ENV=development
DATABASE_URL="file:./dev.db"
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
OPENAI_API_KEY=your_openai_key
# Бесплатные альтернативы: сценарии (Groq) и картинки (Replicate)
# GROQ_API_KEY=your_groq_key_from_console.groq.com
# REPLICATE_API_TOKEN=your_replicate_token_from_replicate.com
STORAGE_PATH=./uploads
BASE_URL=http://localhost:3000
DAILY_LIMIT_FREE=2
DAILY_LIMIT_PREMIUM=20
# Оплата звёздами: сколько звёзд за одну генерацию (по умолчанию 5)
# PAYMENT_STARS_PER_GENERATION=5
# Подписки: Basic 75 видео/мес, 100 звёзд; VIP 300 видео/мес, 200 звёзд
# BASIC_MONTHLY_VIDEOS=75
# BASIC_PRICE_STARS=100
# VIP_MONTHLY_VIDEOS=300
# VIP_PRICE_STARS=200
# Секрет для webhook Telegram (задай при настройке setWebhook)
# TELEGRAM_WEBHOOK_SECRET=your_secret

# Ключ для доступа к админке (заголовок X-Admin-Key). Если не задан — админка отключена.
# ADMIN_SECRET=your_admin_secret

# Только для локальной разработки: тестировать в браузере без Telegram (не использовать в проде)
# DEV_SKIP_TELEGRAM_AUTH=true

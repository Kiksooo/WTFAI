{
  "name": "wtfai",
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "dev": "concurrently -n api,web \"npm run dev -w api\" \"npm run dev -w web\"",
    "dev:api": "npm run dev -w api",
    "dev:web": "npm run dev -w web",
    "build:api": "npm run build -w api",
    "build:web": "npm run build -w web",
    "db:generate": "npm run db:generate -w api",
    "db:migrate": "npm run db:migrate -w api",
    "db:push": "npm run db:push -w api"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
